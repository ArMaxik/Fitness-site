<h2><%= t :Register %></h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">

    <%= f.email_field :email, autofocus: true, autocomplete: "email", label: t(:Email) %>
  </div>

  <div class="field">
    <%= f.text_field :username, autocomplete: "name", label: t(:NickName) %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
      <em><%= t(:Pls_use) %> <%= @minimum_password_length %> <%= t(:Symb) %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", label: t(:Password_L) %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", label: t(:Password_confirmation) %>
  </div>

  <div class="actions">
    <%= f.submit t(:Register) %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
